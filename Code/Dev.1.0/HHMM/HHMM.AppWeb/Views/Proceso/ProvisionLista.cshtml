@{
	Layout = null;
	ViewBag.Title = "Detalle de Proceso de Provisión";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" http-equiv="Content-Type" charset="utf-8" />
	<title>@ViewBag.Title</title>
	<link href="~/Styles/HHMM.css?v=@ViewBag.versionJS" rel="stylesheet" />
	<link href="~/Styles/DatePickerX.css?v=@ViewBag.versionJS" rel="stylesheet" />
</head>
<body>
	<div class="frm-cabecera">@ViewBag.Title</div>
	<div class="frm-cuerpo" id="PantallaContratos">
		<div>
			<p><span id="spnMensaje" class="Mensaje" /></p>
		</div>
		<div id="divDetalleDoctor">
			<div style="text-align: center" class="form-grupo fila">
				<div class="form-grupo fila">
					<div class="tam-5 izquierda">
						<span>Periodo</span>
					</div>
					<div class="tam-5">
						<input type="text" class="lectura" style="width: 100%" id="txtDetalleDoctorPeriodo" value="2016-03" readonly />
					</div>
					<div class="tam-5 izquierda">
						<span>Fecha</span>
					</div>
					<div class="tam-6">
						<input type="text" class="lectura" style="width: 100%" id="txtDetalleDoctorFechaInicio" value="01/12/2016" readonly />
					</div>
					<div class="tam-6">
						<input type="text" class="lectura" style="width: 100%" id="txtDetalleDoctorFechaFin" value="31/12/2016" readonly />
					</div>
					<div class="tam-5 izquierda">
						<span>Tipo Admisión</span>
					</div>
					<div class="tam-6">
						<input type="text" class="lectura" style="width: 100%" id="txtDetalleDoctorTipoAdmision" value="No asegurado" readonly />
					</div>
				</div>
				<ul class="ribbon" id="divOpcionesProvision">
					<li class="active" data-estado="P">Pendiente<span id="spnOpcProv1"></span></li>
					<li data-estado="C">Calculado<span id="spnOpcProv2"></span></li>
					<li data-estado="A">Autorizar<span id="spnOpcProv3"></span></li>
					<li data-estado="F">Provisionar<span id="spnOpcProv4"></span></li>
				</ul>
				<br />
				<div id="divDetalle" class="tabla"></div>
				<div id="divDetalleBotonera" style="text-align: center" class="form-grupo fila">
					<div class="tam-25">
						<span class="boton" id="btnDetalleCalcular">Calcular</span>&nbsp;&nbsp;
                        <span class="boton" id="btnDetalleAutorizar">Autorizar</span>&nbsp;&nbsp;
                        <span class="boton" id="btnDetalleProvisionar">Provisionar</span>&nbsp;&nbsp;
                        <span class="boton" id="btnDetalleCancelar">Cancelar</span>&nbsp;&nbsp;
                        <span class="boton" id="btnDetalleCargar">Cargar</span>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="PopupDetalleConceptos" class="PopUp">
		<div style="width: 750px; margin: 3% auto;">
			<div class="row">
				<div class="PopupCabecera bg-amarillo center black">
					<div class="divCerrarPopUp" style="width: 750px; position: fixed; display: block"><span class="cerrarPopUp" onclick="abrirPopup('PopupPrestaciones');"><i class="Icons fa-close"></i></span></div>
					<h5 style="margin: 10px" id="TituloPopupDetalleConceptos">Modificar Prestaciones</h5>
				</div>
				<div class="PopupCuerpo bg-white" style="padding: 15px 20px">
					<div class="frm-cuerpo-det">
						<div id="ifrDetalleConceptos"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="PopupDetalleConceptosOA" class="PopUp">
		<div style="width: 750px; margin: 3% auto;">
			<div class="row">
				<div class="PopupCabecera bg-amarillo center black">
					<div class="divCerrarPopUp" style="width: 750px; position: fixed; display: block"><span class="cerrarPopUp" onclick="abrirPopup('PopupDetalleConceptosOA');"><i class="Icons fa-close"></i></span></div>
					<h5 style="margin: 10px" id="TituloPopupDetalleConceptosOA">Modificar Prestaciones</h5>
				</div>
				<div class="PopupCuerpo bg-white" style="padding: 15px 20px">
					<div class="frm-cuerpo-det">
						<div id="ifrDetalleConceptosOA"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script src="~/Scripts/ProvisionLista.js?v=@ViewBag.versionJS"></script>
</body>
</html>
